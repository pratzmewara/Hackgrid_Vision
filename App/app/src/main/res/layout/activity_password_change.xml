<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="510dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/Password_change_Activity"
    >


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/passwordchangeicon"
        android:tint="@color/colorPrimary"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">





            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/EnterCurrPaswrdlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"

                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EnterCurrPaswrd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Current Password"
                    android:inputType="textPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/EnternewPaswrdlayout"
                android:layout_margin="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EnternewPaswrd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter New Password"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/entrpaswrdAgainlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"

                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/entrpaswrdAgain"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter New Password Again"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>




            <Button
                android:id="@+id/save_paswrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gradientbackground"
                android:layout_gravity="right"
                android:text="SAVE"
                android:onClick="savePaswrd"/>





        </LinearLayout>
    </ScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/surprise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="Gift your friends one quiz entry and get one entry free. 3 friends invited equals lifetime quiz entry"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textSize="21sp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:text="FREE QUIZ ENTRY!"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textSize="21sp"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/ralewaysemibold"
                        android:text="ZXS6DA"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="0dp"
                        android:background="@drawable/dotted"
                        android:layerType="software"
                        android:layout_marginVertical="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#ffffff"
                    android:orientation="vertical">
                </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.8"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/invitebutton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal|bottom"
            android:backgroundTint="#ffffff"
            android:layout_weight="1"
            android:fontFamily="@font/ralewaysemibold"
            android:paddingHorizontal="30dp"
            android:text="INVITE NOW"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="21sp"
            app:cornerRadius="25dp"
            app:elevation="50dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.75"
        android:layout_marginBottom="50dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:actualImageResource="@drawable/coins"
            android:id="@+id/inv_bottom"/>



        </LinearLayout>

</LinearLayout>

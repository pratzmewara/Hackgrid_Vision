<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/leaderboard_card_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="3dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rank"
                android:gravity="center"
                android:text="1"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/portfolioname"
                android:text="Portfolio 1"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <!--This text view should have color green for positive
            and red for negative numbers in your dummy data, take only
            magnitude as double. Add percentage before settext-->

            <TextView
                android:id="@+id/portfolioreturns"
                android:text="+135%"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>



        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>